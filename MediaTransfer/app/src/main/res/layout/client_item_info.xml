<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/client_item_padding">
    <TextView
        android:id="@+id/client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/client_item_top_padding"/>

    <TextView
        android:id="@+id/last_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="@dimen/client_item_top_padding"/>

    <TextView
        android:id="@+id/last_msg_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/client_name"
        android:paddingTop="@dimen/client_item_top_padding"
        android:paddingBottom="@dimen/client_item_top_padding"/>

    <com.assistant.ui.view.CircleIndicatorView
        android:id="@+id/indicator_text"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:alpha="50"
        android:visibility="visible"
        app:textColor="#FFFFFFFF"
        app:bkColor="#FFFF0000"
        app:textSize="10sp"/>
</RelativeLayout>
